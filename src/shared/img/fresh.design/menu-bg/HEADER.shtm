    <style>
        .box img { border: 1px solid #888; }
        
        /* kleiner Missbrauch des allgemeinen "box"-Containers */
        .box {
            width: 210px; /* Bildbreite 230px - 2*padding */
            padding: 10px;
            margin: 1em !important;
            border: 1px solid #888;
            float: left;
            background-repeat: repeat-y;
            height: 500px;
        }

        .box p, .box h4 {
            margin: 5px;
        }
    </style>
    <script type="text/javascript">
       /* kleiner Scrolleffekt */
       var interval;  var box;
       var box_x = 0;
      function initHover() {
            bla = document.getElementsByName("hoverbox");
            for(var x=0; x<bla.length; x++) {
                bla[x].onmouseover = scrollbox;
                bla[x].onmouseout = blurbox;
            }
        }

        function scrollbox() {
            box = this; // box_x = 0;
            this.style.border = "1px solid red";
            interval = window.setInterval(scrollit, 100);
        }

        function blurbox() {
            window.clearInterval(interval);
            this.style.border = "1px solid #888";
            //box.style.backgroundPosition = "0px 0px"; // zuruecksetzen
        }

        function scrollit() {
            box_x += 5;
            box.style.backgroundPosition = "0px "+box_x+"px";
        }

        window.onload = initHover;
    </script>
</head>
